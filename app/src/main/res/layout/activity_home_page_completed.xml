<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.HomePageCompletedActivity"
    android:background="@color/background">

    <ImageView
        android:id="@+id/homecompletehotomelogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/topbar"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOTOME"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.5"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/homecompletehotomelogo"
        app:layout_constraintBottom_toBottomOf="@id/homecompletehotomelogo"/>

    <TextView
        android:id="@+id/homecomplete_add_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/homecompletehotomelogo"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Complete Task"
        android:textColor="@color/dBrown"
        android:textSize="25dp"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.05"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp">

    </TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homecomplete_mid_box"
        android:layout_width="316dp"
        android:layout_height="200dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/outlinebox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homecomplete_add_text">


        <TextView
            android:id="@+id/homecomplete_deleted_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="10dp"
            android:text="All selected tasks marked as complete!"
            android:textColor="@color/dBrown"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/homecomplete_returnbutton"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:text="Return"
        android:textSize="16dp"
        android:fontFamily="sans-serif-black"
        app:cornerRadius="50dp"
        android:layout_marginVertical="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homecomplete_mid_box" />
</androidx.constraintlayout.widget.ConstraintLayout>