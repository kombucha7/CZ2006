<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"
        android:id="@+id/groupNamePageScrollView"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/groupNameOnboardingRectangle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/onboarding_rectangle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/groupNameGrandpa" />

            <ImageView
                android:id="@+id/groupNameGrandpa"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/grandpa"
                app:layout_constraintTop_toBottomOf="@+id/groupNameBackButton"
                />

            <ImageView
                android:id="@+id/groupNameBackButton"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/back_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/dBrown"
                />

            <TextView
                android:id="@+id/groupNameBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="Back"
                android:textColor="@color/dBrown"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/groupNameBackButton"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/groupNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:layout_marginLeft="50dp"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.05"
                android:text="Group Name"
                android:textColor="@color/dBrown"
                android:textSize="35sp"
                app:layout_constraintTop_toBottomOf="@+id/groupNameGrandpa"
                />

            <TextView
                android:id="@+id/groupNamePrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name your group after your care recipient: "
                android:textColor="@color/dBrown"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf ="@+id/groupNameText"
                android:layout_marginVertical="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                />

            <EditText
                android:id="@+id/groupNameField"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:layout_marginVertical="13dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/roundededittext"
                app:layout_constraintTop_toBottomOf="@+id/groupNamePrompt"
                android:padding="15dip"
                />

            <Button
                android:id="@+id/groupnameNextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginVertical="50dp"
                android:backgroundTint="@color/button"
                android:fontFamily="sans-serif-black"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:layout_marginLeft="79dp"
                android:layout_marginRight="79dp"
                android:text="Next"
                android:textSize="16dp"
                app:cornerRadius="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/groupNameField"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
