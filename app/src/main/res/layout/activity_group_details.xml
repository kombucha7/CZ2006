<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Account.GroupDetailsActivity">

    <ImageView
        android:id="@+id/groupDetails_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/topbar"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.5"
        android:text="HOTOME"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/groupDetails_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/groupDetails_header"
        app:layout_constraintTop_toTopOf="@id/groupDetails_header" />

    <ImageView
        android:id="@+id/groupDetails_BackButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/groupDetails_header"
        app:tint="@color/dBrown" />

    <TextView
        android:id="@+id/groupDetails_BackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Back"
        android:textColor="@color/dBrown"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/groupDetails_BackButton"
        app:layout_constraintTop_toBottomOf="@id/groupDetails_header" />

    <TextView
        android:id="@+id/groupDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group Details"
        android:textColor="@color/dBrown"
        android:textSize="25dp"
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toBottomOf="@+id/groupDetails_BackButton" />

    <TextView
        android:id="@+id/groupDetails_NameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:layout_marginLeft="40dp"
        android:text="Care Recipient:"
        android:textColor="@color/dBrown"
        android:letterSpacing="0.05"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/groupDetails"/>

    <TextView
        android:id="@+id/groupDetails_CareRecipientName"
        android:textColor="@color/dBrown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingTop="15dp"
        android:paddingLeft="20dp"
        android:background="@drawable/account_box"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/groupDetails_NameText" />

    <TextView
        android:id="@+id/groupDetails_CodeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:layout_marginLeft="40dp"
        android:text="Group Code:"
        android:textColor="@color/dBrown"
        android:letterSpacing="0.05"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/groupDetails_CareRecipientName"/>

    <TextView
        android:id="@+id/groupDetails_GroupCode"
        android:textColor="@color/dBrown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingTop="15dp"
        android:paddingLeft="20dp"
        android:background="@drawable/account_box"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/groupDetails_CodeText" />

    <TextView
        android:id="@+id/groupDetails_OtherCaretakersText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:layout_marginLeft="40dp"
        android:text="Other Caretakers:"
        android:textColor="@color/dBrown"
        android:letterSpacing="0.05"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/groupDetails_GroupCode"/>

    <TextView
        android:id="@+id/groupDetails_OtherCaretakers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingTop="15dp"
        android:paddingLeft="20dp"
        android:background="@drawable/account_box"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/groupDetails_OtherCaretakersText" />

    <Button
        android:id="@+id/groupDetails_EditProfileButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button"
        android:layout_marginLeft="85dp"
        android:layout_marginRight="85dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:text="switch groups"
        android:textSize="16dp"
        android:fontFamily="sans-serif-black"
        app:cornerRadius="50dp"
        android:layout_marginVertical="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupDetails_OtherCaretakers"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>