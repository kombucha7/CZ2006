<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".LoginRegister.RegisterActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/back_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/dBrown" />

            <TextView
                android:id="@+id/regPageBackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="Back"
                android:textColor="@color/dBrown"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/back_button"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/loginpagepic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/grandpa"
                app:layout_constraintTop_toBottomOf="@+id/back_button" />


            <ImageView
                android:id="@+id/bottom_background"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/onboarding_rectangle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loginpagepic"
                app:layout_constraintVertical_bias="0.0" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/registerbutton"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-black"
                app:cornerRadius="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/passwordfield2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"/>

            <EditText
                android:id="@+id/namefield"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:background="@drawable/roundededittext"
                android:padding="15dip"
                android:layout_marginVertical="13dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/NameText" />

            <EditText
                android:id="@+id/emailfield"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:background="@drawable/roundededittext"
                android:padding="15dip"
                android:layout_marginVertical="13dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/EmailText" />

            <EditText
                android:id="@+id/passwordfield1"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:padding="15dip"
                android:background="@drawable/roundededittext"
                android:layout_marginVertical="13dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/PWText"
                android:inputType="textPassword" />


            <EditText
                android:id="@+id/passwordfield2"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:padding="15dip"
                android:background="@drawable/roundededittext"
                android:layout_marginVertical="13dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ConfirmPWText"
                android:inputType="textPassword"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/signuptext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="@color/dBrown"
                android:textSize="35dp"
                app:layout_constraintHorizontal_bias="0.165"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loginpagepic"
                android:layout_marginTop="30dp"
                android:letterSpacing="0.05"
                android:fontFamily="sans-serif-black"
                android:layout_marginLeft="50dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/NameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textColor="@color/dBrown"
                android:textSize="16dp"
                android:layout_marginVertical="30dp"
                android:layout_marginLeft="50dp"
                app:layout_constraintTop_toBottomOf="@id/signuptext" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/EmailText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email address:"
                android:textColor="@color/dBrown"
                android:textSize="16dp"
                android:layout_marginVertical="30dp"
                android:layout_marginLeft="50dp"
                app:layout_constraintTop_toBottomOf="@id/namefield" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/PWText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:textColor="@color/dBrown"
                android:textSize="16dp"
                android:layout_marginVertical="25dp"
                android:layout_marginLeft="50dp"
                app:layout_constraintTop_toBottomOf="@id/emailfield" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/ConfirmPWText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Password:"
                android:textColor="@color/dBrown"
                android:textSize="16dp"
                android:layout_marginVertical="25dp"
                android:layout_marginLeft="50dp"
                app:layout_constraintTop_toBottomOf="@id/passwordfield1" />
        </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>