<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ConnectGroup.GroupselectionActivity">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/dBrown" />

    <TextView
        android:id="@+id/back_button_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Back"
        android:textColor="@color/dBrown"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/back_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/grouppagepic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/grandpa"
        app:layout_constraintTop_toBottomOf="@+id/back_button" />

    <ImageView
        android:id="@+id/bottom_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/onboarding_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grouppagepic" />

    <TextView
        android:id="@+id/groupSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your \ngroup"
        android:textColor="@color/dBrown"
        android:textSize="35dp"
        android:layout_marginVertical="30dp"
        android:layout_marginLeft="50dp"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="5dp"
        app:layout_constraintTop_toBottomOf="@+id/grouppagepic" />

    <TextView
        android:id="@+id/gs_group1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:layout_centerVertical = "true"
        android:text=""
        android:textColor="@color/dBrown"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/groupSelect"/>

    <TextView
        android:id="@+id/gs_group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_centerVertical = "true"
        android:text=""
        android:textColor="@color/dBrown"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gs_group1"/>

    <TextView
        android:id="@+id/gs_group3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_centerVertical = "true"
        android:text=""
        android:textColor="@color/dBrown"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gs_group2"/>
    <TextView
        android:id="@+id/gs_group4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_centerVertical = "true"
        android:text=""
        android:textColor="@color/dBrown"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gs_group3"/>
    <TextView
        android:id="@+id/gs_group5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_centerVertical = "true"
        android:text=""
        android:textColor="@color/dBrown"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gs_group4"/>

    <Button
        android:id="@+id/add_grp_btn"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:text="Add new group"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="30dp"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gs_group5" />

</androidx.constraintlayout.widget.ConstraintLayout>