<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Calendar.CalendarCaretakerActivity">

    <!--                start of topbar code                 -->
    <ImageView
        android:id="@+id/calendar_caretaker_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/topbar"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOTOME"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.5"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/calendar_caretaker_header"
        app:layout_constraintBottom_toBottomOf="@id/calendar_caretaker_header"/>
    <!--                end of topbar code                 -->

    <ImageView
        android:id="@+id/back_btn_cal2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendar_caretaker_header"
        app:tint="@color/dBrown" />

    <TextView
        android:id="@+id/back_word_cal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Back"
        android:textColor="@color/dBrown"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/back_btn_cal2"
        app:layout_constraintTop_toBottomOf="@id/calendar_caretaker_header" />

    <TextView
        android:id="@+id/schedule_for1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schedule for:"
        android:textColor="@color/dBrown"
        android:textSize="25dp"
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toBottomOf="@+id/back_btn_cal2" />

    <TextView
        android:id="@+id/schedule_date1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DD MM YYYY"
        android:textColor="@color/dBrown"
        android:textSize="25dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toBottomOf="@+id/schedule_for1" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/calendar_divider3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:dividerColor="@color/button"
        app:dividerInsetEnd="35dp"
        app:dividerInsetStart="35dp"
        app:layout_constraintTop_toBottomOf="@+id/schedule_date1" >
    </com.google.android.material.divider.MaterialDivider>

    <TextView
        android:id="@+id/cal_edit_caretaker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Caretaker"
        android:textColor="@color/dBrown"
        android:textSize="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toBottomOf="@+id/calendar_divider3" />

    <TextView
        android:id="@+id/cal_caretaker_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who would you like to change it to?"
        android:textColor="@color/dBrown"
        android:textSize="16dp"
        android:layout_marginTop="15dp"
        android:letterSpacing="0.05"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cal_edit_caretaker" />

    <TextView
        android:id="@+id/cal_caretaker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caretaker 1"
        android:textColor="@color/dBrown"
        android:textSize="16dp"
        android:layout_marginTop="30dp"
        android:letterSpacing="0.05"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cal_caretaker_desc" />

    <TextView
        android:id="@+id/cal_caretaker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caretaker 2"
        android:textColor="@color/dBrown"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:letterSpacing="0.05"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cal_caretaker1" />

    <TextView
        android:id="@+id/cal_caretaker3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caretaker 3"
        android:textColor="@color/dBrown"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:letterSpacing="0.05"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cal_caretaker2" />

    <TextView
        android:id="@+id/cal_caretaker4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caretaker 4"
        android:textColor="@color/dBrown"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:letterSpacing="0.05"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cal_caretaker3" />

    <TextView
        android:id="@+id/cal_caretaker5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caretaker 5"
        android:textColor="@color/dBrown"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:letterSpacing="0.05"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cal_caretaker4" />

    <Button
        android:id="@+id/cal_caretaker_changebtn"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:text="Confirm"
        android:textSize="16dp"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="30dp"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cal_caretaker5" />

</androidx.constraintlayout.widget.ConstraintLayout>