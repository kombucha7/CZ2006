<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background = "@color/background"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/dBrown" />

        <TextView
            android:id="@+id/back_button_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="Back"
            android:textColor="@color/dBrown"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/back_button"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/loginpagepic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/grandpa"
            app:layout_constraintTop_toBottomOf="@+id/back_button" />

        <ImageView
            android:id="@+id/bottom_background_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/onboarding_rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toBottomOf="@id/loginpagepic" />

        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textColor="@color/dBrown"
            android:textSize="35dp"
            android:layout_marginVertical="30dp"
            android:layout_marginLeft="50dp"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.05"
            app:layout_constraintTop_toBottomOf="@+id/loginpagepic" />

        <TextView
            android:id="@+id/emailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginLeft="50dp"
            android:text="Email address:"
            android:textColor="@color/dBrown"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/login"/>

        <EditText
            android:id="@+id/enter_email"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:background="@drawable/roundededittext"
            android:padding="15dp"
            android:layout_marginVertical="13dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf ="@+id/emailAddress" />

        <TextView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="25dp"
            android:layout_marginLeft="50dp"
            android:text="Password:"
            android:textColor="@color/dBrown"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/enter_email"/>

        <EditText
            android:id="@+id/enter_password"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:background="@drawable/roundededittext"
            android:padding="15dp"
            android:layout_marginVertical="13dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf ="@+id/password" />

        <Button
            android:id="@+id/loginbutton"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button"
            android:fontFamily="sans-serif-black"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:text="Login"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enter_password"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>