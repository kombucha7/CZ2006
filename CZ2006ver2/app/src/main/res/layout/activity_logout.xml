<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".LogoutActivity">

    <ImageView
        android:id="@+id/logout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/topbar"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.5"
        android:text="HOTOME"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/logout_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/logout_header"
        app:layout_constraintTop_toTopOf="@id/logout_header" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/logout_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/logout_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logout_header">


        <TextView
            android:id="@+id/logout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center_horizontal"
            android:letterSpacing="0.05"
            android:layout_marginTop="50dp"
            android:text="Logout from \naccount?"
            android:textColor="@color/dBrown"
            android:textSize="25dp"
            android:lineSpacingExtra="10dp"
            app:layout_constraintEnd_toEndOf="@+id/logout_background"
            app:layout_constraintStart_toStartOf="@+id/logout_background"
            app:layout_constraintTop_toTopOf="@+id/logout_background" />

        <Button
            android:id="@+id/logout_ConfirmButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:text="confirm"
            android:textSize="16dp"
            android:fontFamily="sans-serif-black"
            app:cornerRadius="50dp"
            android:layout_marginVertical="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logout_text"
            tools:ignore="MissingConstraints"
            />

        <Button
            android:id="@+id/logout_BackButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginVertical="30dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:text="Back"
            android:textSize="16dp"
            android:fontFamily="sans-serif-black"
            app:cornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logout_ConfirmButton"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>